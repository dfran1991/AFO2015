@model IEnumerable<IGrouping<string,Orlandia2015.Models.Rank>>

@{
    ViewBag.Title = "Index";
}

<h2>Ranks</h2>

<div class="row">
    <div class="col-md-12">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success pull-right" })
    </div>
</div>
<div class="row">
    @foreach (var faction in Model)
    {
        <div class="col-md-6">
            <h4>@faction.Key</h4>
            <table class="table">
                <tr>
                    <th>
                        Rank:
                    </th>
                    <th>
                        Name:
                    </th>
                    <th>
                        Required Points:
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in faction)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.iRankNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sRankName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.iRankPoints)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = item.uRankID })" title="Edit" class="btn btn-primary btn-xs">
                                <i class="glyphicon glyphicon-pencil"></i>
                                <span class="sr-only">Edit</span>
                            </a>
                            <a href="@Url.Action("Delete", new { id = item.uRankID })" title="Delete" class="btn btn-danger btn-xs">
                                <i class="glyphicon glyphicon-trash"></i>
                                <span class="sr-only">Delete</span>
                            </a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    }
</div>