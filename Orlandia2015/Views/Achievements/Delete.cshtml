@model Orlandia2015.Models.Achievement

@{
    ViewBag.Title = "Delete Achievement";
}

<h2>Delete Achievement</h2>

<h3>Are you sure you want to delete this achievement?</h3>
<hr />
<div>
    <dl class="dl-horizontal">
        <dt>
            Achievement Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sName)
        </dd>

        <dt>
            Sort Order:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.iSortOrder)
        </dd>

        <dt>
            Can be manually set:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.bCanBeManuallySet)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> 
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-primary" })
        </div>
    }
</div>
