@model Orlandia2015.Models.Player

@{
    ViewBag.Title = "Details";
}

<h2>Player Details</h2>
<hr />
<div class="row">
    <div class="col-md-12">
        <dl class="dl-horizontal">
            <dt>
                Player Name:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.sName)
            </dd>

            <dt>
                Faction:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Faction.sName)
            </dd>

            <dt>
                Current Rank:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Rank.sRankName)

            </dd>

            <dt>
                Number of Points:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.iPoints)

            </dd>

            @if (ViewBag.NextRankPercent > -1)
            {
                <dt>Next Rank:</dt>
                <dd>
                    <div class="progress" style="width:250px; margin-bottom:0;">
                        <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="@ViewBag.NextRankPercent" aria-valuemin="0" aria-valuemax="100" style="min-width:2em; width:@ViewBag.NextRankPercent%">
                            @ViewBag.NextRankPercent%
                        </div>
                    </div>
                </dd>
            }

        </dl>
    </div>

    
</div>
<div class="row">
    <div class="col-md-6" style="border-right: 1px solid #eee;">
        <h4>Achievements: @Html.ActionLink("Add Achievement", "AddAchievement", new { id = Model.uPlayerID }, new { @class = "btn btn-xs btn-primary" })</h4>
        <ul class="list-unstyled">
            @foreach (var item in Model.Achievements.OrderBy(i => i.Achievement.iSortOrder))
            {
                <li>@item.Achievement.sName</li>
            }
        </ul>
    </div>
    <div class="col-md-6">
        <h4>Completed Missions: @Html.ActionLink("Add Mission", "AddMission", new { id = Model.uPlayerID }, new { @class = "btn btn-xs btn-primary" })</h4>
        <ul class="list-unstyled">
            @foreach (var item in Model.Missions.OrderBy(i => i.Mission.sMissionName))
            {
                <li>@item.Mission.sMissionName</li>
            }
        </ul>
    </div>
</div>
<hr />
<p>    
    @Html.ActionLink("Add Points", "AddPoints", new { id = Model.uPlayerID }, new { @class = "btn btn-md btn-success" })
    @Html.ActionLink("Edit", "Edit", new { id = Model.uPlayerID }, new { @class = "btn btn-md btn-primary" })
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-md btn-warning" })
</p>
