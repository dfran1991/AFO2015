@model Orlandia2015.Models.Mission

@{
    ViewBag.Title = "Delete Mission";
}

<h2>Delete Mission</h2>
<h3>Are you sure you want to delete this mission?</h3>
<hr />
<div>
    
    <dl class="dl-horizontal">
        <dt>
            Mission Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sMissionName)
        </dd>

        <dt>
            Mission Points:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.iMissionPoints)
        </dd>

        <dt>
            Is Quest:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.bIsMissionQuest)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
        </div>
    }
</div>
