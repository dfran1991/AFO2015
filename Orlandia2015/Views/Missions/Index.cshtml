@model IEnumerable<Orlandia2015.Models.Mission>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mission Name
        </th>
        <th>
            Points
        </th>
        <th>
            Is Quest
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.sMissionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.iMissionPoints)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.bIsMissionQuest)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id = item.uMissionID })" title="Edit" class="btn btn-primary btn-xs">
                <i class="glyphicon glyphicon-pencil"></i>
                <span class="sr-only">Edit</span>
            </a>
            <a href="@Url.Action("Delete", new { id = item.uMissionID })" title="Delete" class="btn btn-danger btn-xs">
                <i class="glyphicon glyphicon-trash"></i>
                <span class="sr-only">Delete</span>
            </a>
        </td>
    </tr>
}

</table>
